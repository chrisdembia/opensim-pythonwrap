<?xml version="1.0" encoding="UTF-8"?>
<SimmModel name="hopper">

	<defaults/>
	
	<!-- Actuators -->
	<AbsActuatorSet name="">
		<objects>
			<GeneralizedForceAtv name="extensor">
				<area> 1.0 </area>
				<min_force> -10000.0 </min_force>
				<max_force>  10000.0 </max_force>
				<optimal_force> 4000.0 </optimal_force>
				<qid> 1 </qid>
				<rise_time> 0.010 </rise_time>
				<fall_time> 0.050 </fall_time>
			</GeneralizedForceAtv>
			
			<GeneralizedForceAtv name="flexor">
				<area> 1.0 </area>
				<min_force> -10000.0 </min_force>
				<max_force>  10000.0 </max_force>
				<optimal_force> -4000.0 </optimal_force>
				<qid> 1 </qid>
				<rise_time> 0.010 </rise_time>
				<fall_time> 0.050 </fall_time>
			</GeneralizedForceAtv>
		</objects>
	</AbsActuatorSet>
	
	<DynamicsEngine>
		<SdfastEngine name="">
		
			<gravity>       0.00000000      -9.80665000       0.00000000 </gravity>

			<!-- Bodies -->
			<SdfastBodySet name="hopper_bodies">
				<objects>
					<SdfastBody name="ground">
						<mass_center> 0.0 0.0 0.0 </mass_center>
						<BoneSet name="">
							<objects/>
						</BoneSet>
						<MarkerSet name="">
							<objects/>
						</MarkerSet>
						<index> -1 </index>
					</SdfastBody>
					
					<SdfastBody name="trunk">
						<mass_center> 0.0 0.0 0.0 </mass_center>
						<BoneSet name="">
							<objects>
							</objects>
						</BoneSet>
						<MarkerSet name="">
							<objects>
							</objects>
						</MarkerSet>
						<index> 0 </index>
					</SdfastBody>
					
					<SdfastBody name="foot">
						<mass_center> 0.0 0.0 0.0 </mass_center>
						<BoneSet name="">
							<objects>
							</objects>
						</BoneSet>
						<MarkerSet name="">
							<objects>
							</objects>
						</MarkerSet>
						<index> 1 </index>
					</SdfastBody>
				</objects>
			</SdfastBodySet>

			<!-- Coordinates -->
			<SdfastCoordinateSet name="">
				<objects>
					<SdfastCoordinate name="trunk_Y">
						<default_value>    1.0 </default_value>
						<default_velocity> 0.0 </default_velocity>
						<tolerance> 0.0 </tolerance>
						<stiffness> 0.0 </stiffness>
						<weight>    1.0 </weight>
						<conversion> 1.0 </conversion>
						<range> 0.0 10.0 </range>
						<keys> </keys>
						<clamped> false </clamped>
						<locked> false </locked>
						<q_type> 0 </q_type>
						<index> 0 </index>
						<joint> 0 </joint>
						<axis> 0 </axis>
						<restraint_function/>
						<min_restraint_function/>
						<max_restraint_function/>
						<restraint_active> false </restraint_active>
					</SdfastCoordinate>
					
					<SdfastCoordinate name="leg_length">
						<default_value> 1.0 </default_value>
						<default_velocity> 0.0 </default_velocity>
						<tolerance> 0.0</tolerance>
						<stiffness> 0.0</stiffness>
						<weight> 1.0 </weight>
						<conversion> 1.0 </conversion>
						<range> 0.1      1.2 </range>
						<keys> </keys>
						<clamped> false </clamped>
						<locked> false </locked>
						<q_type> 0 </q_type>
						<index> 1 </index>
						<joint> 1 </joint>
						<axis> 01 </axis>
						<restraint_function/>
						<min_restraint_function/>
						<max_restraint_function/>
						<restraint_active> true </restraint_active>
					</SdfastCoordinate>
				</objects>
			</SdfastCoordinateSet>
			
			<!-- Joints -->
			<SdfastJointSet name="">
				<objects>
				
					<SdfastJoint name="ground_trunk">
						<bodies> ground trunk </bodies>
						<index> 0 </index>
						<sdfast_type> slider </sdfast_type>
					</SdfastJoint>
					
					<SdfastJoint name="trunk_foot">
						<bodies> trunk foot </bodies>
						<index> 1 </index>
						<sdfast_type> slider </sdfast_type>
					</SdfastJoint>
					
				</objects>
			</SdfastJointSet>
			
		</SdfastEngine>
	</DynamicsEngine>
	
	<length_units> meters </length_units>
	
	<force_units> Newtons </force_units>
	
</SimmModel>

