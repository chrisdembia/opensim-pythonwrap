<?xml version="1.0" encoding="UTF-8"?>
<InvestigationForward name="hopping_simulation">

	<defaults/>
	
	<model_library> hopper </model_library>
	<model_file> hopper.xml </model_file>

	<actuator_set_file> </actuator_set_file>
	<contact_force_set_file> </contact_force_set_file>
	<params_file> </params_file>
	<library_list> rdActuators_D suAnalyses_D </library_list>
	<results_directory> ./Results </results_directory>
	<output_precision> 8 </output_precision>
	<initial_time>0.0</initial_time>
	<final_time> 4.0 </final_time>
	<maximum_number_of_integrator_steps> 20000 </maximum_number_of_integrator_steps>
	<maximum_integrator_step_size> 0.1 </maximum_integrator_step_size>
	<integrator_error_tolerance> 0.0001 </integrator_error_tolerance>
	
	<AnalysisSet name="Analyses">
		<objects>
			<Kinematics name="Kinematics">
				<On> true </On>
				<StartTime> -1.0e-30 </StartTime>
				<EndTime> 1.0e30 </EndTime>
				<StepInterval> 1 </StepInterval>
				<InDegrees> true </InDegrees>
			</Kinematics>
			
			<Actuation name="Actuation">
				<On> true </On>
				<StartTime> -1000.00000000 </StartTime>
				<EndTime> 1000.00000000 </EndTime>
				<StepInterval> 1 </StepInterval>
				<InDegrees> true </InDegrees>
			</Actuation>
			
			<ActuatorGeneralizedForces name="ActuatorGeneralizedForces">
				<On> true </On>
				<StartTime> 0.0</StartTime>
				<EndTime> 10.00000000 </EndTime>
				<StepInterval> 1 </StepInterval>
				<InDegrees> true </InDegrees>
				<ActuatorsList>actuator</ActuatorsList>
			</ActuatorGeneralizedForces>
			
			<BodyKinematics name="BodyKinematics">
				<On> true </On>
				<StartTime> -10.00000000 </StartTime>
				<EndTime> 100.00000000 </EndTime>
				<StepInterval> 1 </StepInterval>
				<InDegrees> true </InDegrees>
				<AnglularVelocityLocal> true </AnglularVelocityLocal>
			</BodyKinematics>
		</objects>
	</AnalysisSet>
	
	<!-- Don't specify these for now...
	<controls_file_name> hopper_controls.xml </controls_file_name>
	<initial_states_file_name> hopper_states.sto </initial_states_file_name>
	-->
	
</InvestigationForward>

